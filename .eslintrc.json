{
  "extends": "airbnb-base",
  "env": {
      "es6": true,
      "browser": true,
      "jest": true
  },
  "rules": { // установка правил
  "max-len": ["error", { "code": 140 }],
  "import/no-unresolved": [
      2, 
      { "caseSensitive": false }
   ], 
      "no-unused-vars": "off",
      "linebreak-style": [
          "error",
          "windows"
      ],
      "no-restricted-syntax": [
          "error",
          "LabeledStatement",
          "WithStatement"
      ]
  }
}